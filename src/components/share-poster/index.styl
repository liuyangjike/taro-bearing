.share-poster
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  min-height 100vh
  z-index 1000
  opacity 0
  visibility hidden
  background-color rgba(0, 0, 0, .8)

.show
  opacity 1
  visibility visible

.shadow
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .8)

.poster-canvas
  position absolute
  width 100%
  height 100%
  z-index 1000
  transform translate3d(100%, 0, 0)

.box
  position absolute
  top 50%
  left 50%
  width 100%
  height 100%
  text-align center
  transform translate(-50%, -50%)

.box-wrap
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%

.img-wrap
  position relative
  width (80 * .9)vw

.canvas-img
  box-sizing border-box
  width (80 * .9)vw
  height (16 / 9 * 80 * .9)vw

.footer-btn
  position relative
  display flex
  flex-direction row
  justify-content center
  margin-top 15px
  width 100%

.btn-save
  display flex
  justify-content center
  align-items center
  width 118px
  height 40px
  border 1px solid rgba(255, 255, 255, 1)
  color #fff
  // background linear-gradient(60deg, rgba(47, 90, 255, 1) 0%, rgba(0, 147, 255, 1) 100%)
  font-size 15px
  font-weight 400
  line-height 21px
  border-radius 100px

.btn-share
  display flex
  justify-content center
  align-items center
  margin-left 33px
  width 118px
  height 40px
  color #fff
  font-size 15px
  font-weight 400
  line-height 21px
  border-radius 100px
  background linear-gradient(60deg, rgba(47, 90, 255, 1) 0, rgba(0, 147, 255, 1) 100%)
  box-shadow 0 2px 6px 0 rgba(47, 90, 255, .2)

.icon
  margin-right 2px
  width 18px
  height 18px

.icon-wechat
  margin-right 2px
  width 18px
  height 14px

.close
  position absolute
  top 0
  right 0
  width 36px
  height 38px
  background url('https://fashion-1.oss-cn-shanghai.aliyuncs.com/close.png') no-repeat
  background-size 36px 38px
