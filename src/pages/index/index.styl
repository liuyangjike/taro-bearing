
.container
  position relative
  min-height 100vh
  background #f7f8fa
  overflow hidden


.bc
  position absolute
  top 100px
  width 0
  height 0;
  border 100vw solid
  border-color #0E82FF transparent transparent

.title
  position relative
  display block
  margin 20px 20px
  color #ffffff
  font-size 17px
  font-weight 500

.btn-group
  position relative
  background #0E82FF
  margin-top 20px

.card
  position relative
  background #fff
  height 400px
  margin 20px 20px
  border-radius 6px
  box-shadow 0 4px 10px rgba(36, 37, 38, 0.06)

.card-content
  display block
  line-height 30px
  min-height 90px
  padding 60px 20px 10px
  color #2f3742
  font-size 20px
  font-weight 500
  word-wrap break-word

.loading-content
  position relative
  top 40px
  display block
  height 60px
  margin 20px
  background-color #F4F4F4
  border-radius 6px

.loading-btn
  display inline-block
  height 40px
  width 166px
  border-radius 100px
  margin-top 50px
  background-color #F4F4F4

.btn-container
  text-align center

.daka-btn
  display inline-block
  width 166px
  height 40px
  color #fff
  font-size 16px
  font-weight 500
  line-height 40px
  border-radius 100px
  background-color #cfd4db
  text-align center

  &.preview
    box-shadow 0 2px 6px 0 rgba(47, 90, 255, .2)
    background-image linear-gradient(83deg, #2f5aff, #0093ff)

  &:active
    color #ddd
    background #0081ff
    


.invite-tip-wrapper
  display flex
  justify-content center
  align-items center
  margin-left 20px
  width 86px
  background #0E82FF
  height 25px
  border 1px solid rgba(255, 255, 255, .5)
  line-height 25px
  border-radius 16px

  &:active
    background #0E82bb

  
  .invite-tip
    color #fff
    font-size 12px
    font-weight 400


.share-btn
  position absolute
  bottom 10px
  right 10px
  width 60px
  height 18px
  color #fff
  font-size 12px
  font-weight 500
  line-height 18px
  border-radius 100px
  text-align center
  border 1px solid #2f5aff
  transition all .1s ease
  color #2f5aff

  &:active
    background #ddd
    border 1px solid #ddd
    

.make-btn
  position absolute
  bottom 10px
  display inline-block
  left 10px
  width 18px
  height 18px
  transition all .1s ease
  background url(https://fashion-1.oss-cn-shanghai.aliyuncs.com/mes.png) no-repeat
  background-size cover

  &:active
    width 22px
    height 22px